<h1>Welcome</h1>
<h3> Posts:</h3>
{{#if data.isUser}}
    <form action="/thread" method="post">
        <br>
        <textarea name="content" cols="30" rows="10" placeholder="Enter Comment..."></textarea>
        <br>
        <button type="submit">Submit</button>
    </form>
{{/if}}
<hr>
{{#each data.threads}}
<div>{{this.body}}
<br>
[{{this.likes}} like]
<p class="_id">{{this._id}}</p>
{{#each this.comments}}
    <p class="nested">
        {{this.body}}
        <br>
        by: {{this.author}}
        [{{this.likes}} like]
    </p>
{{/each}}
</div>
<hr>
{{/each}}

<style>
    ._id{
        display:none;
    }
    .nested{
        margin-left:50px;
    }
</style>